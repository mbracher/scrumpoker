{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
        // "function": "sveltekit"
      }
    ],
    "predeploy": ["npm run build"]
  },
  "functions": {
    "source": "functions"
  },
  "emulators": {
    "ui": {
      "enabled": false
    },
    "hosting": {
      "port": 8685
    },
    "functions": {
      "port": 5001
    }
  }
}
